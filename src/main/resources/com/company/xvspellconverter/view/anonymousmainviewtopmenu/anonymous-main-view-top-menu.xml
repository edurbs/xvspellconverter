<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<mainView xmlns="http://jmix.io/schema/flowui/main-view"
          title="msg://AnonymousMainViewTopMenu.title">
    <data>
        <instance id="convertDc" class="com.company.xvspellconverter.entity.Convert">
            <fetchPlan extends="_base"/>
            <loader id="convertDl"/>
        </instance>
    </data>
    <actions>
        <action id="login" icon="SIGN_IN" type="logout"/>
    </actions>
    <appLayout classNames="jmix-main-view-top-menu-app-layout">
        <navigationBar>
            <vbox id="navigationBarBox"
                  classNames="jmix-main-view-top-menu-navigation-bar-box" alignSelf="CENTER" boxSizing="CONTENT_BOX"
                  alignItems="CENTER">
                <nativeLabel text="Conversor de Grafia Xavante" alignSelf="CENTER" css="font-size: calc(1.375rem + 1.5vw);"/>
                <textArea minWidth="95%"
                          placeholder="Cole aqui o texto para converter" minHeight="200px" id="textAreaFrom"
                          autofocus="true"/>
                <hbox>
                    <button text="Converter" icon="ROCKET" id="buttonConvert"/>
                    <button text="Limpar" icon="REFRESH" id="buttonClean"/>
                </hbox>
                <textArea minWidth="95%" readOnly="true" minHeight="200px" id="textAreaTo"/>
                <button id="loginButton" action="login" alignSelf="END"/>
                <header id="navigationHeader"
                        classNames="jmix-main-view-top-menu-header" minWidth="100%">
                    <hbox id="userHeaderBox"
                          classNames="jmix-main-view-top-menu-user-box">
                    </hbox>
                </header>
                <hbox id="viewHeaderBox"
                      classNames="jmix-main-view-top-menu-view-header-box">
                    <h1 id="viewTitle"
                        classNames="jmix-main-view-top-menu-view-title" text="A"/>
                </hbox>
            </vbox>
        </navigationBar>
        <initialLayout/>
    </appLayout>
</mainView>